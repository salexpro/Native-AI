// Eight screen =====================================================================
mixin eight(header, text, color, button, img)
    .publisher--eight-screen
        .wrapper
            .text-section
                .title-box
                    h3.bold= header
                .text-box
                    p
                        !=text
                .button-box
                    a.button(href='./register.html' class=color)
                        =button
                        i
                            +icon('arrow', [20, 14], '#fff')
            .ill-section
                img(src='assets/images/illustrations/' + img +'.svg')