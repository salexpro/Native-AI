mixin first(header, descr, button)
    section.first
        .wrapper
            h1!=header
            p.first_descr=descr
            a.button.orange(href="./register.html")
                =button
                i
                    +icon('arrow', [20, 14], '#fff')
            .first_ill(class=page ? 'first_ill--' + page : false)
                if page == 'main'
                    img(src="assets/images/illustrations/main.svg", alt=header)
                else
                    .first_ill_img
                        img(src="assets/images/illustrations/anim.gif", alt=header)
                    p.first_ill_label
                        | NativeAI - Under the Hood